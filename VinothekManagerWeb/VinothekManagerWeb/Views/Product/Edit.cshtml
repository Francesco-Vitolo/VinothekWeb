@model Product

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Produkt bearbeiten </h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>

            <label asp-for="Art"></label>
            <input asp-for="Art" class="form-control"/>

            <label asp-for="Alkoholgehalt"></label>
            <input asp-for="Alkoholgehalt" class="form-control"/>

            <label asp-for="Geschmack"></label>
            <input asp-for="Geschmack" class="form-control"/>

            <label asp-for="Jahrgang"></label>
            <input asp-for="Jahrgang" class="form-control"/>

            <label asp-for="Preis"></label>
            <input asp-for="Preis" class="form-control"/>

            <label asp-for="Qualitätssiegel"></label>
            <input asp-for="Qualitätssiegel" class="form-control"/>

            <label asp-for="Rebsorten"></label>
            <input asp-for="Rebsorten" class="form-control"/>

            <label asp-for="Beschreibung"></label>
            <input asp-for="Beschreibung" class="form-control"/>

            <label asp-for="Aktiv"></label>
            <input asp-for="Aktiv" type="checkbox"/>
            <br/>
            @*<input asp-for="Image" type="file" accept="image/*"/>*@
        </div>

        <button type="submit" class="btn btn-primary" style="width:200px"> Speichern </button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:200px"> Zurück zur Übersicht </a>
    </div>
</form>

@section Scripts{
    @{ 
    <partial name="_ValidationScriptsPartial.cshtml" />
    }
}