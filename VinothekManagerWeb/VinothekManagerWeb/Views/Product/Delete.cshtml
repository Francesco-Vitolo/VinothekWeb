@model Product

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Produkt löschen </h2>
            <hr/>
        </div>
         <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control"/>
        </div>

        <button type="submit" class="btn btn-danger" style="width:200px"> Löschen </button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:200px"> Zurück zur Übersicht </a>
    </div>
</form>

@section Scripts{
    @{ 
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}