@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Produkt hinzufügen </h2>
            <hr/>
        </div>
          <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:200px"> Speichern </button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:200px"> Zurück zur Übersicht </a>
    </div>
</form>

@section Scripts{
    @{ 
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}