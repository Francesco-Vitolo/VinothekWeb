@model IEnumerable<ProducerModel>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification"/>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary"> Liste Produzenten </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Producer" asp-action="Create" class="btn btn-primary"> Produzent hinzufügen </a>
        </div>
    </div>
    <br/>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
          <th> Name </th>
          <th> Region </th>
          <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var producer in Model)
        {
            <tr>
                <td> @producer.Name </td>
                <td> @producer.Region </td>
                <td> @producer.Email </td>
                <td> @producer.Telefon </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Producer" asp-action="Edit" asp-route-id="@producer.ProducerId" class="btn btn-primary mx-2"> <i class="bi bi-pencil"></i> </a>
                        <a asp-controller="Producer" asp-action="Delete" asp-route-id="@producer.ProducerId" class="btn btn-danger mx-2"> <i class="bi bi-trash"></i> </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

