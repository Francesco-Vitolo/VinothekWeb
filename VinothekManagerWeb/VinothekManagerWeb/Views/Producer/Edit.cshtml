@model ProducerModel

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Produzent bearbeiten </h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>

            <label asp-for="Region"></label>
            <input asp-for="Region" class="form-control"/>

            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control"/>

            <label asp-for="Telefon"></label>
            <input asp-for="Telefon" class="form-control"/>

            <label asp-for="Adresse"></label>
            <input asp-for="Adresse" class="form-control"/>
        </div>
        @{
            if (ViewBag.Products is not null)
            {
                <h2> Produkte des Erzeugers  </h2>
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Art </th>
                            <th>Name </th>
                            <th>Rebsorten </th>
                            <th>Jahrgang </th>
                            <th>Preis </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in ViewBag.Products)
                        {
                            <tr>
                                <td> @product.Art </td>
                                <td> @product.Name </td>
                                <td> @product.Rebsorten </td>
                                <td> @product.Jahrgang </td>
                                <td> @product.Preis </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
        <button type="submit" class="btn btn-primary" style="width:200px"> Speichern </button>
        <a asp-controller="Producer" asp-action="Index" class="btn btn-secondary" style="width:200px"> Zurück zur Übersicht </a>
    </div>
</form>

@section Scripts{
    @{ 
    <partial name="_ValidationScriptsPartial.cshtml" />
    }
}